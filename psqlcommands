# to create a new table
CREATE TABLE unique_captures21Oct (
src         text,
surt        text,
checksum    text,
date        date,
code        text,
title       text,
description text,
content     text);

CREATE TABLE total_captures (
date       date,
src        text,
checksum   text);

CREATE TABLE total_counts (
date           date,
src            text,
wordsperpage   int);

## sample
CREATE [ [ GLOBAL | LOCAL ] { TEMPORARY | TEMP } | UNLOGGED ] TABLE [ IF NOT EXISTS ] table_name ( [
  { column_name data_type [ COLLATE collation ] [ column_constraint [ ... ] ]
    | table_constraint
    | LIKE parent_table [ like_option ... ] }
    [, ... ]
] )
[ INHERITS ( parent_table [, ... ] ) ]
[ WITH ( storage_parameter [= value] [, ... ] ) | WITH OIDS | WITHOUT OIDS ]
[ ON COMMIT { PRESERVE ROWS | DELETE ROWS | DROP } ]
[ TABLESPACE tablespace ]

CREATE TABLE films (
    code        char(5) CONSTRAINT firstkey PRIMARY KEY,
    title       varchar(40) NOT NULL,
    did         integer NOT NULL,
    date_prod   date,
    kind        varchar(10),
    len         interval hour to minute
);

CREATE TABLE distributors (
     did    integer PRIMARY KEY DEFAULT nextval('serial'),
     name   varchar(40) NOT NULL CHECK (name <> '')
);

CREATE TABLE unique_captures ( date       date,
CAPPPDotGovClimateChange(> src        text,
CAPPPDotGovClimateChange(> title      text,
CAPPPDotGovClimateChange(> content    text,
CAPPPDotGovClimateChange(> checksum   text);



